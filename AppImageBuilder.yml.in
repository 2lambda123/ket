version: 1
script:
  # Remove any previous build
  - rm -rf AppDir  | true
  # Make usr and icons dirs
  - mkdir -p AppDir/usr/share/applications
  - cp ket.desktop AppDir/usr/share/applications/
  - mkdir -p AppDir/usr/share/icons/hicolor/scalable/apps
  - cp icon/ket.svg AppDir/usr/share/icons/hicolor/scalable/apps/
  - cp icon/ket.svg AppDir/
  # Install application
  - make
  - python3 setup.py install --prefix=/usr --root=AppDir

AppDir:
  path: ./AppDir

  app_info:
    id: org.quantum-ket.ket
    name: ket
    icon: ket
    version: VERSION
    exec: usr/bin/python3.8
    exec_args: "-m ket $@"

  apt:
    arch: amd64
    sources:
      - sourceline: 'deb [arch=amd64] http://archive.ubuntu.com/ubuntu/ focal main'
        key_url: 'http://keyserver.ubuntu.com/pks/lookup?op=get&search=0x3B4FE6ACC0B21F32'
      
    include:
      - python3.8-minimal
      - libpython3.8-dev
      - libstdc++6
    exclude: []

  runtime:
    env:
      PYTHONPATH: '$APPDIR/usr/lib/python3.8/site-packages'
      LD_PRELOAD: '$APPDIR/usr/lib/python3.8/site-packages/ket/libapprun_hooks.so'
      APPDIR_LIBRARY_PATH: '$APPDIR/usr/lib/python3.8/site-packages/ket:$APPDIR/usr/lib/python3.8/lib-dynload:$APPDIR/usr/lib/python3.8/config-3.8-x86_64-linux-gnu:$APPDIR/usr/lib/x86_64-linux-gnu/engines-1.1:$APPDIR/lib/x86_64-linux-gnu:$APPDIR/usr/lib/x86_64-linux-gnu'
      LIBC_LIBRARY_PATH: '$APPDIR/opt/libc/usr/lib/x86_64-linux-gnu/gconv:$APPDIR/opt/libc/usr/lib/x86_64-linux-gnu:$APPDIR/opt/libc/lib/x86_64-linux-gnu:$APPDIR/opt/libc/usr/lib/x86_64-linux-gnu/audit'
     
  test:
    fedora:
      image: appimagecrafters/tests-env:fedora-33
      command: ./AppRun -h
      use_host_x: true
    debian:
      image: appimagecrafters/tests-env:debian-stable
      command: ./AppRun -h
      use_host_x: true
    arch:
      image: appimagecrafters/tests-env:archlinux-latest
      command: ./AppRun -h
      use_host_x: true
    centos:
      image: appimagecrafters/tests-env:centos-7
      command: ./AppRun -h
      use_host_x: true
    ubuntu:
      image: appimagecrafters/tests-env:ubuntu-bionic
      command: ./AppRun -h
      use_host_x: true

AppImage:
  update-information: None
  sign-key: None
  arch: x86_64
